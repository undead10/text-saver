@page
@model IndexModel
@{
    ViewData["Title"] = "Text Saver";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">Text Saver</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="fileName" class="form-label">File Name:</label>
                            <input type="text" class="form-control" id="fileName" name="FileName" value="@Model.FileName" placeholder="Enter file name (without .txt)">
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">Your Notes:</label>
                            <textarea class="form-control" id="content" name="NoteContent" rows="10" placeholder="Type your notes here...">@Model.NoteContent</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save as .txt File</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
